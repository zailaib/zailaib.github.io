---
import { ClientRouter } from 'astro:transitions';
import Sidebar from '../components/Sidebar.astro';
import Minimap from '../components/Minimap.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import { getCurrentLanguage, getTranslation } from '../i18n/utils';
import type { BaseLayoutProps, PostsByCategory } from '../types';

const {
  title = 'Astro Basics',
  description,
  showSidebar = true,
  showMinimap = true,
  sidebarData,
  currentSlug,
  isPost = false
} = Astro.props as BaseLayoutProps;

// 在构建时导入预生成的侧边栏数据
const defaultSidebarData = await import('../generated/sidebar.json');
const postsByCategory = sidebarData || (defaultSidebarData as any).default as PostsByCategory;

// 获取当前语言
const currentLang = getCurrentLanguage(Astro.url.pathname);
const translation = getTranslation(currentLang);

// 动态页面标题
const pageTitle = title === 'Astro Basics' ? translation.common.siteTitle : `${title} | ${translation.common.siteTitle}`;
---

<!doctype html>
<html lang={currentLang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		{description && <meta name="description" content={description} />}

		<!-- 预加载关键字体 -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
	</head>
	<body>
    <!-- 顶部导航栏 -->
    <header class="site-header">
      <div class="header-content">
        <div class="site-branding">
          <h1 class="site-title">
            <a href={currentLang === 'en' ? '/en/' : '/'}>{translation.common.siteTitle}</a>
          </h1>
        </div>
        <div class="header-controls">
          <LanguageSwitcher currentPath={Astro.url.pathname} />
        </div>
      </div>
    </header>

    <!-- 主要内容区域 -->
    <div class="app-container">
      {showSidebar && (
        <aside class="sidebar-container" id="sidebar">
          <div class="sidebar-content">
            <Sidebar postsByCategory={postsByCategory} />
          </div>
        </aside>
      )}

      <main class="main-content" id="main-content">
        <div class={`content-wrapper ${isPost ? 'post-content' : 'page-content'}`}>
          <slot />
        </div>
      </main>

      {showMinimap && (
        <aside class="minimap-container" id="minimap">
          <div class="minimap-content">
            <Minimap currentSlug={currentSlug} />
          </div>
        </aside>
      )}
    </div>

    <!-- 移动端遮罩层 -->
    <div class="mobile-overlay" id="mobile-overlay"></div>

    <!-- 固定底部按钮 -->
    <div class="fixed-bottom-buttons">
      <button class="bottom-btn sidebar-btn" id="sidebar-toggle" title={translation.common.toggleNavigation}>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
      <button class="bottom-btn home-btn" id="home-btn" title="返回首页">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
          <polyline points="9,22 9,12 15,12 15,22"/>
        </svg>
      </button>
      <button class="bottom-btn top-btn" id="top-btn" title="回到顶部">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="m18 15-6-6-6 6"/>
        </svg>
      </button>
      <button class="bottom-btn minimap-btn" id="minimap-toggle" title={translation.common.toggleMinimap}>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
          <polyline points="3.27,6.96 12,12.01 20.73,6.96"></polyline>
          <line x1="12" y1="22.08" x2="12" y2="12"></line>
        </svg>
      </button>
    </div>

    <!-- 页面过渡和脚本 -->
    <ClientRouter />
    <script is:inline src="/scripts/mobile-interaction.js"></script>
    <script is:inline src="/scripts/bottom-buttons.js"></script>
	</body>
</html>

<style>
  /* ===== CSS 变量定义 ===== */
  :root {
    /* 颜色系统 - 自然柔和的色彩搭配 */
    --color-bg-primary: #fefefe;
    --color-bg-secondary: #f8fafc;
    --color-bg-tertiary: #f1f5f9;
    --color-bg-accent: #ffffff;

    --color-text-primary: #1e293b;
    --color-text-secondary: #475569;
    --color-text-tertiary: #64748b;
    --color-text-muted: #94a3b8;

    --color-border-light: #e2e8f0;
    --color-border-medium: #cbd5e1;
    --color-border-strong: #94a3b8;

    --color-accent-primary: #3b82f6;
    --color-accent-hover: #2563eb;
    --color-accent-light: #dbeafe;

    /* 字体系统 - 层次分明的字号设计 */
    --font-family-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    --font-family-mono: 'JetBrains Mono', 'Fira Code', 'Monaco', 'Consolas', monospace;

    --font-size-xs: 0.75rem;    /* 12px */
    --font-size-sm: 0.875rem;   /* 14px */
    --font-size-base: 1rem;     /* 16px */
    --font-size-lg: 1.125rem;   /* 18px */
    --font-size-xl: 1.25rem;    /* 20px */
    --font-size-2xl: 1.5rem;    /* 24px */
    --font-size-3xl: 1.875rem;  /* 30px */
    --font-size-4xl: 2.25rem;   /* 36px */

    --font-weight-light: 300;
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;

    /* 行高系统 - 符合阅读习惯的行距 */
    --line-height-tight: 1.25;
    --line-height-normal: 1.5;
    --line-height-relaxed: 1.625;
    --line-height-loose: 2;

    /* 间距系统 - 适度的留白设计 */
    --spacing-xs: 0.25rem;   /* 4px */
    --spacing-sm: 0.5rem;    /* 8px */
    --spacing-md: 0.75rem;   /* 12px */
    --spacing-lg: 1rem;      /* 16px */
    --spacing-xl: 1.5rem;    /* 24px */
    --spacing-2xl: 2rem;     /* 32px */
    --spacing-3xl: 3rem;     /* 48px */
    --spacing-4xl: 4rem;     /* 64px */

    /* 阴影系统 - 自然的深度感 */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);

    /* 圆角系统 */
    --radius-sm: 0.25rem;
    --radius-md: 0.375rem;
    --radius-lg: 0.5rem;
    --radius-xl: 0.75rem;

    /* 过渡动画 - 自然流畅的动效 */
    --transition-fast: 150ms ease-in-out;
    --transition-normal: 250ms ease-in-out;
    --transition-slow: 350ms ease-in-out;

    /* 布局尺寸 */
    --header-height: 4rem;
    --sidebar-width: 280px;
    --minimap-width: 240px;
    --content-max-width: 65ch;
  }

  /* ===== 基础重置和全局样式 ===== */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html {
    font-size: 16px;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    font-family: var(--font-family-primary);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-normal);
    line-height: var(--line-height-normal);
    color: var(--color-text-primary);
    background-color: var(--color-bg-primary);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* ===== 头部样式 ===== */
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: var(--color-bg-accent);
    border-bottom: 1px solid var(--color-border-light);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--spacing-xl);
    height: var(--header-height);
  }

  .site-branding .site-title {
    margin: 0;
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-tight);
  }

  .site-title a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .site-title a:hover {
    color: var(--color-accent-primary);
  }

  .header-controls {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }



  /* ===== 主要布局容器 ===== */
  .app-container {
    display: grid;
    grid-template-columns: var(--sidebar-width) 1fr var(--minimap-width);
    gap: var(--spacing-2xl);
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--spacing-2xl);
    min-height: calc(100vh - var(--header-height));
  }

  /* ===== 侧边栏样式 ===== */
  .sidebar-container {
    grid-column: 1;
    position: sticky;
    top: calc(var(--header-height) + var(--spacing-2xl));
    height: fit-content;
    max-height: calc(100vh - var(--header-height) - var(--spacing-4xl));
  }

  .sidebar-content {
    background: var(--color-bg-accent);
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: var(--color-border-medium) transparent;
  }

  .sidebar-content::-webkit-scrollbar {
    width: 6px;
  }

  .sidebar-content::-webkit-scrollbar-track {
    background: transparent;
  }

  .sidebar-content::-webkit-scrollbar-thumb {
    background: var(--color-border-medium);
    border-radius: 3px;
  }

  .sidebar-content::-webkit-scrollbar-thumb:hover {
    background: var(--color-border-strong);
  }

  /* ===== 主内容区域样式 ===== */
  .main-content {
    grid-column: 2;
    min-width: 0; /* 防止内容溢出 */
  }

  .content-wrapper {
    background: var(--color-bg-accent);
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-lg);
    padding: var(--spacing-3xl);
    box-shadow: var(--shadow-sm);
  }

  /* 页面内容样式 */
  .page-content {
    /* 页面内容的特殊样式 */
  }

  /* 文章内容样式 - 针对 Markdown 内容优化 */
  .post-content {
    max-width: var(--content-max-width);
    margin: 0 auto;
  }

  /* ===== Markdown 内容样式 ===== */
  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4),
  .post-content :global(h5),
  .post-content :global(h6) {
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-tight);
    color: var(--color-text-primary);
    margin-top: var(--spacing-3xl);
    margin-bottom: var(--spacing-xl);
  }

  .post-content :global(h1) {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    margin-top: 0;
    margin-bottom: var(--spacing-2xl);
    padding-bottom: var(--spacing-lg);
    border-bottom: 2px solid var(--color-border-light);
  }

  .post-content :global(h2) {
    font-size: var(--font-size-3xl);
    margin-top: var(--spacing-4xl);
  }

  .post-content :global(h3) {
    font-size: var(--font-size-2xl);
  }

  .post-content :global(h4) {
    font-size: var(--font-size-xl);
  }

  .post-content :global(h5),
  .post-content :global(h6) {
    font-size: var(--font-size-lg);
  }

  .post-content :global(p) {
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-xl);
  }

  .post-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .post-content :global(a) {
    color: var(--color-accent-primary);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all var(--transition-fast);
  }

  .post-content :global(a:hover) {
    color: var(--color-accent-hover);
    border-bottom-color: var(--color-accent-hover);
  }

  .post-content :global(strong) {
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
  }

  .post-content :global(em) {
    font-style: italic;
    color: var(--color-text-secondary);
  }

  .post-content :global(code) {
    font-family: var(--font-family-mono);
    font-size: 0.875em;
    background: var(--color-bg-secondary);
    color: var(--color-accent-primary);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    border: 1px solid var(--color-border-light);
  }

  .post-content :global(pre) {
    font-family: var(--font-family-mono);
    font-size: var(--font-size-sm);
    background: var(--color-bg-tertiary);
    color: var(--color-text-primary);
    padding: var(--spacing-xl);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border-light);
    overflow-x: auto;
    margin: var(--spacing-xl) 0;
    line-height: var(--line-height-normal);
  }

  .post-content :global(pre code) {
    background: none;
    border: none;
    padding: 0;
    color: inherit;
  }

  .post-content :global(blockquote) {
    margin: var(--spacing-xl) 0;
    padding: var(--spacing-xl);
    background: var(--color-accent-light);
    border-left: 4px solid var(--color-accent-primary);
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
    font-style: italic;
    color: var(--color-text-secondary);
  }

  .post-content :global(blockquote p) {
    margin-bottom: var(--spacing-lg);
  }

  .post-content :global(blockquote p:last-child) {
    margin-bottom: 0;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: var(--spacing-xl) 0;
    padding-left: var(--spacing-2xl);
    color: var(--color-text-secondary);
  }

  .post-content :global(li) {
    margin-bottom: var(--spacing-sm);
    line-height: var(--line-height-relaxed);
  }

  .post-content :global(li:last-child) {
    margin-bottom: 0;
  }

  .post-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--spacing-xl) 0;
    font-size: var(--font-size-sm);
  }

  .post-content :global(th),
  .post-content :global(td) {
    padding: var(--spacing-md) var(--spacing-lg);
    text-align: left;
    border-bottom: 1px solid var(--color-border-light);
  }

  .post-content :global(th) {
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    background: var(--color-bg-secondary);
  }

  .post-content :global(td) {
    color: var(--color-text-secondary);
  }

  .post-content :global(hr) {
    border: none;
    height: 1px;
    background: var(--color-border-light);
    margin: var(--spacing-3xl) 0;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    margin: var(--spacing-xl) 0;
  }

  /* ===== 小地图样式 ===== */
  .minimap-container {
    grid-column: 3;
    position: sticky;
    top: calc(var(--header-height) + var(--spacing-2xl));
    height: fit-content;
    max-height: calc(100vh - var(--header-height) - var(--spacing-4xl));
  }

  .minimap-content {
    background: var(--color-bg-accent);
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: var(--color-border-medium) transparent;
  }

  .minimap-content::-webkit-scrollbar {
    width: 6px;
  }

  .minimap-content::-webkit-scrollbar-track {
    background: transparent;
  }

  .minimap-content::-webkit-scrollbar-thumb {
    background: var(--color-border-medium);
    border-radius: 3px;
  }

  .minimap-content::-webkit-scrollbar-thumb:hover {
    background: var(--color-border-strong);
  }

  /* ===== 响应式设计 ===== */
  @media (max-width: 1200px) {
    .app-container {
      grid-template-columns: 260px 1fr 220px;
      gap: var(--spacing-xl);
      padding: var(--spacing-xl);
    }

    .content-wrapper {
      padding: var(--spacing-2xl);
    }
  }

  @media (max-width: 1024px) {
    .app-container {
      grid-template-columns: 240px 1fr;
      gap: var(--spacing-xl);
    }

    .minimap-container {
      display: none;
    }

    .header-content {
      padding: 0 var(--spacing-lg);
    }
  }

  @media (max-width: 768px) {
    .app-container {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
      padding: var(--spacing-lg);
      justify-items: center;
    }

    .main-content {
      width: 100%;
      max-width: 100%;
    }

    .sidebar-container,
    .minimap-container {
      display: none;
    }

    .header-content {
      padding: 0 var(--spacing-lg);
    }

    .content-wrapper {
      padding: var(--spacing-xl);
      width: 100%;
    }

    .site-branding .site-title {
      font-size: var(--font-size-lg);
    }

    /* 移动端遮罩层 */
    .mobile-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 999;
      opacity: 0;
      transition: opacity var(--transition-normal);
    }

    .mobile-overlay.visible {
      display: block;
      opacity: 1;
    }

    /* 移动端手势提示 */
    .mobile-gesture-hint {
      position: fixed;
      bottom: var(--spacing-xl);
      left: 50%;
      transform: translateX(-50%);
      background: var(--color-bg-accent);
      color: var(--color-text-secondary);
      padding: var(--spacing-sm) var(--spacing-lg);
      border-radius: var(--radius-full);
      font-size: var(--font-size-xs);
      box-shadow: var(--shadow-md);
      z-index: 1001;
      opacity: 0.8;
      pointer-events: none;
      animation: fadeInOut 4s ease-in-out;
    }

    @keyframes fadeInOut {
      0%, 100% { opacity: 0; transform: translateX(-50%) translateY(20px); }
      20%, 80% { opacity: 0.8; transform: translateX(-50%) translateY(0); }
    }

    /* 固定底部按钮 */
    .fixed-bottom-buttons {
      position: fixed;
      bottom: var(--spacing-2xl);
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: var(--spacing-lg);
      z-index: 1000;
      pointer-events: none;
    }

    .bottom-btn {
      width: 56px;
      height: 56px;
      border-radius: 50%;
      border: 1px solid var(--color-border-light);
      background: var(--color-bg-accent);
      color: var(--color-text-secondary);
      box-shadow: var(--shadow-md);
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all var(--transition-fast);
      pointer-events: auto;
      backdrop-filter: blur(10px);
    }

    .bottom-btn:hover {
      background: var(--color-bg-secondary);
      color: var(--color-text-primary);
      border-color: var(--color-accent-primary);
      transform: translateY(-2px);
      box-shadow: var(--shadow-lg);
    }

    .bottom-btn:active {
      transform: translateY(0);
      box-shadow: var(--shadow-sm);
    }

    .bottom-btn svg {
      transition: transform var(--transition-fast);
    }

    .bottom-btn:hover svg {
      transform: scale(1.1);
    }

    /* 按钮特定样式 */
    .home-btn {
      background: linear-gradient(135deg, var(--color-accent-primary), var(--color-accent-hover));
      color: white;
      border-color: var(--color-accent-primary);
    }

    .home-btn:hover {
      background: linear-gradient(135deg, var(--color-accent-hover), var(--color-accent-primary));
      border-color: var(--color-accent-hover);
      color: white;
    }

    .sidebar-btn {
      background: var(--color-bg-accent);
      color: var(--color-text-secondary);
    }

    .sidebar-btn:hover {
      background: var(--color-accent-light);
      color: var(--color-accent-primary);
      border-color: var(--color-accent-primary);
    }

    .top-btn {
      background: var(--color-bg-accent);
      color: var(--color-text-secondary);
    }

    .top-btn:hover {
      background: var(--color-bg-secondary);
      color: var(--color-text-primary);
      border-color: var(--color-accent-primary);
