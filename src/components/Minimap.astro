---
import type { MinimapProps } from '../types';
import { getCurrentLanguage, t } from '../i18n/utils';

const { currentSlug } = Astro.props as MinimapProps;

// 获取当前语言
const currentLang = getCurrentLanguage(Astro.url.pathname);
---

<aside class="minimap">
  <h3>{t(currentLang, 'minimap.title')}</h3>
  <div class="minimap-content" id="minimap-links">
    <!-- 动态生成的导航链接将在这里 -->
    <p class="minimap-placeholder">{t(currentLang, 'minimap.loading')}</p>
  </div>
</aside>

<script is:inline>
  // 传递语言信息到JavaScript
  window.minimapConfig = {
    currentLang: `{currentLang}`,
    translations: {
      noHeadings: `{t(currentLang, 'minimap.noHeadings')}`
    }
  };
</script>
<script is:inline src="/scripts/minimap.js"></script>

<style>
  .minimap {
    background: var(--color-bg-accent);
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    max-height: calc(100vh - var(--header-height) - var(--spacing-4xl));
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: var(--color-border-medium) transparent;
  }

  .minimap h3 {
    margin: 0 0 var(--spacing-xl) 0;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-secondary);
    border-bottom: 1px solid var(--color-border-light);
    padding-bottom: var(--spacing-sm);
    position: sticky;
    top: 0;
    background: var(--color-bg-accent);
    z-index: 1;
  }

  .minimap-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .minimap-placeholder {
    color: var(--color-text-muted);
    font-style: italic;
    font-size: var(--font-size-sm);
    margin: 0;
    text-align: center;
    padding: var(--spacing-lg) 0;
  }

  .minimap-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: var(--font-size-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
    border-left: 3px solid transparent;
    line-height: var(--line-height-tight);
  }

  .minimap-link:hover {
    background-color: var(--color-bg-secondary);
    color: var(--color-accent-primary);
    border-left-color: var(--color-accent-primary);
  }

  .minimap-link.active {
    background-color: var(--color-accent-light);
    color: var(--color-accent-primary);
    border-left-color: var(--color-accent-primary);
  }

  /* 不同级别的标题缩进 - 与 Sidebar 保持一致的层次感 */
  .minimap-link.level-1 {
    font-weight: var(--font-weight-semibold);
    padding-left: var(--spacing-md);
  }

  .minimap-link.level-2 {
    font-weight: var(--font-weight-medium);
    padding-left: var(--spacing-lg);
  }

  .minimap-link.level-3 {
    font-weight: var(--font-weight-normal);
    padding-left: var(--spacing-xl);
    font-size: var(--font-size-xs);
  }

  .minimap-link.level-4,
  .minimap-link.level-5,
  .minimap-link.level-6 {
    font-weight: var(--font-weight-normal);
    padding-left: calc(var(--spacing-xl) + var(--spacing-sm));
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  /* 滚动条样式 - 与 Sidebar 保持一致 */
  .minimap::-webkit-scrollbar {
    width: 6px;
  }

  .minimap::-webkit-scrollbar-track {
    background: transparent;
  }

  .minimap::-webkit-scrollbar-thumb {
    background: var(--color-border-medium);
    border-radius: 3px;
  }

  .minimap::-webkit-scrollbar-thumb:hover {
    background: var(--color-border-strong);
  }
</style>
